@model ManageRolesViewModel

<div class="container mt-4">
    <h2>Manage Roles for @Model.Email</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row mt-4">
        <div class="col-md-6">
            <h4>Current Roles</h4>
            <ul class="list-group">
                @foreach (var role in Model.UserRoles)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @role
                        <form asp-action="RemoveRole" method="post" class="m-0">
                            <input type="hidden" name="userId" value="@Model.UserId" />
                            <input type="hidden" name="role" value="@role" />
                            <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                        </form>
                    </li>
                }
            </ul>
        </div>

        <div class="col-md-6">
            <h4>Add Role</h4>
            <ul class="list-group">
                @foreach (var role in Model.AllRoles)
                {
                    if (!Model.UserRoles.Contains(role))
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            @role
                            <form asp-action="AddRole" method="post" class="m-0">
                                <input type="hidden" name="userId" value="@Model.UserId" />
                                <input type="hidden" name="role" value="@role" />
                                <button type="submit" class="btn btn-success btn-sm">Add</button>
                            </form>
                        </li>
                    }
                }
            </ul>
        </div>
    </div>

    <a asp-action="Index" class="btn btn-secondary mt-3">Back</a>
</div>
