@{
    var CurrentController = ViewContext.RouteData.Values["Controller"]?.ToString();
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Baloo+Thambi+2:wght@400..800&family=Rubik:ital,wght@0,300..900;1,300..900&display=swap"
          rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <!-- ^ Bootstrap 5.3.8 css file -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- ^ Our main css file -->
    <link rel="stylesheet" href="~/css/style.css" />
    <title>Power fitness | @ViewData["Title"] </title>
</head>

<body>
    <header>
        <!-- ^ navbar -->
        <nav class="navbar navbar-expand-lg bg-white shadow-sm py-3">
            <div class="container">

                <!-- Logo -->
                <a class="navbar-brand" href="#">
                    <img src="~/images/logo.jpg" alt="Logo" style="height: 50px;">
                </a>

                <!-- Toggler -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar Links -->
                <div class="collapse navbar-collapse" id="navbarSupportedContent">

                    <ul class="navbar-nav d-flex align-items-center m-auto mb-2 mb-lg-0 mt-3 mt-lg-0">

                        <!-- Home -->
                        <li class="nav-item">
                            <a class="nav-link px-3 py-2 fw-semibold fs-5 @(CurrentController == "Home" ? "active" : "")"
                               asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @if (User.IsInRole("SuperAdmin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link px-3 py-2 fw-semibold fs-5 @(CurrentController == "Member" ? "active" : "")"
                                   asp-controller="Member" asp-action="Index">Members</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link px-3 py-2 fw-semibold fs-5 @(CurrentController == "Trainer" ? "active" : "")"
                                   asp-controller="Trainer" asp-action="Index">Trainers</a>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link px-3 py-2 fw-semibold fs-5 @(CurrentController == "Session" ? "active" : "")"
                               asp-controller="Session" asp-action="Index">Sessions</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link px-3 py-2 fw-semibold fs-5 @(CurrentController == "Plan" ? "active" : "")"
                               asp-controller="Plan" asp-action="Index">Plans</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link px-3 py-2 fw-semibold fs-5 @(CurrentController == "Membership" ? "active" : "")"
                               asp-controller="Membership" asp-action="Index">Memberships</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link px-3 py-2 fw-semibold fs-5 @(CurrentController == "Booking" ? "active" : "")"
                               asp-controller="Booking" asp-action="Index">Sessions Schedule</a>
                        </li>

                        @if (User.IsInRole("SuperAdmin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link px-3 py-2 fw-semibold fs-5 @(CurrentController == "AdminManagement" ? "active" : "")"
                                   asp-controller="AdminManagement" asp-action="Index">Admins Management</a>
                            </li>
                        }
                        @if (User.IsInRole("SuperAdmin"))
                        {

                            <!-- Logout Icon -->
                            <li class="nav-item ms-3">
                                <form asp-action="Logout" asp-controller="Account" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-link p-0 text-black">
                                        <i class="bi bi-box-arrow-right fs-5"></i>
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <form asp-action="Logout" asp-controller="Account" method="post" class="d-inline">
                                    <button type="submit"
                                            class="btn btn-link nav-link px-3 py-2 mx-2 fw-bolder fs-5 text-black-alternative">
                                        Logout
                                    </button>
                                </form>
                            </li>
                        }

                    </ul>

                </div>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
